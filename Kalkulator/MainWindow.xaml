<Window x:Class="Kalkulator.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Kalkulator"
        mc:Ignorable="d"
        Title="MainWindow" FontSize="20" Foreground="Black" Background="#FFDADADA" Width="1000" Height="800" MinWidth="750" MinHeight="550"  FontFamily="Times New Roman">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="20"/>
            <ColumnDefinition Width="0.25*"/>
            <ColumnDefinition Width="0.1*"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="20"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="20"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="2*"/>
            <RowDefinition Height="20"/>
        </Grid.RowDefinitions>

        <!--Zadávací pole-->  
        <TextBlock Grid.Row="2" Grid.Column="1" Text="Geometrie:" VerticalAlignment="Bottom" FontSize="25" FontWeight="Bold" />
        
        <TextBlock Grid.Row="3" Grid.Column="1" Text="Do" VerticalAlignment="Center"/>
        <TextBox x:Name="textBoxDo" Grid.Row="4" Grid.Column="1" VerticalAlignment="Center" PreviewTextInput="OnlyNumbers_PreviewInput" PreviewKeyDown="NotSpace_KeyDown" />

        <TextBlock Grid.Row="5" Grid.Column="1" Text="Di" VerticalAlignment="Center"/>
        <TextBox x:Name="textBoxDi" Grid.Row="6" Grid.Column="1" VerticalAlignment="Center" PreviewTextInput="OnlyNumbers_PreviewInput" PreviewKeyDown="NotSpace_KeyDown" />

        <TextBlock Grid.Row="7" Grid.Column="1" Text="Páteř:" VerticalAlignment="Bottom" FontSize="25" FontWeight="Bold" />

        <TextBlock Grid.Row="8" Grid.Column="1" Text="Fx" VerticalAlignment="Center" />
        <TextBox x:Name="textBoxFx" Grid.Row="9" Grid.Column="1" VerticalAlignment="Center" PreviewTextInput="OnlyNumbers_PreviewInput" PreviewKeyDown="NotSpace_KeyDown" />

        <TextBlock Grid.Row="10" Grid.Column="1" Text="Fy" VerticalAlignment="Center"/>
        <TextBox x:Name="textBoxFy" Grid.Row="11" Grid.Column="1" VerticalAlignment="Center" PreviewTextInput="OnlyNumbers_PreviewInput" PreviewKeyDown="NotSpace_KeyDown" />

        <TextBlock Grid.Row="12" Grid.Column="1" Text="Mx" VerticalAlignment="Center"/>
        <TextBox x:Name="textBoxMx" Grid.Row="13" Grid.Column="1" VerticalAlignment="Center" PreviewTextInput="OnlyNumbers_PreviewInput" PreviewKeyDown="NotSpace_KeyDown" />

        <TextBlock Grid.Row="14" Grid.Column="1" Text="My" VerticalAlignment="Center"/>
        <TextBox x:Name="textBoxMy" Grid.Row="15" Grid.Column="1" VerticalAlignment="Center" PreviewTextInput="OnlyNumbers_PreviewInput" PreviewKeyDown="NotSpace_KeyDown" />
        
        <!--Výsledkové pole-->
        <TextBlock Grid.Row="3" Grid.Column="3" Text="Konečný výsledek" VerticalAlignment="Center" FontSize="25" FontWeight="Bold" />

        <TextBlock Grid.Row="4" Grid.Column="3" Text="Smyk:" VerticalAlignment="Bottom" />
        <TextBlock Name="resultSmyk" Grid.Row="4" Grid.Column="3" Text="-" VerticalAlignment="Bottom" HorizontalAlignment="Center"/>

        <TextBlock Grid.Row="5" Grid.Column="3" Text="Ohyb:" VerticalAlignment="Bottom" />
        <TextBlock Name="resultOhyb" Grid.Row="5" Grid.Column="3" Text="-" VerticalAlignment="Bottom" HorizontalAlignment="Center"/>

        <TextBlock Grid.Row="6" Grid.Column="3" Text="Krut:" VerticalAlignment="Bottom" />
        <TextBlock Name="resultKrut" Grid.Row="6" Grid.Column="3" Text="-" VerticalAlignment="Bottom" HorizontalAlignment="Center"/>

        
        <TextBlock Grid.Row="8" Grid.Column="3" Text="Mezivýsledky" VerticalAlignment="Center" FontSize="25" FontWeight="Bold" />

        <TextBlock Grid.Row="9" Grid.Column="3" Text="A:" VerticalAlignment="Bottom" />
        <TextBlock Name="resultA" Grid.Row="9" Grid.Column="3" Text="-" VerticalAlignment="Bottom" HorizontalAlignment="Center"/>

        <TextBlock Grid.Row="10" Grid.Column="3" Text="Vo:" VerticalAlignment="Bottom" />
        <TextBlock Name="resultVo" Grid.Row="10" Grid.Column="3" Text="-" VerticalAlignment="Bottom" HorizontalAlignment="Center"/>

        <TextBlock Grid.Row="11" Grid.Column="3" Text="Vk:" VerticalAlignment="Bottom" />
        <TextBlock Name="resultVk" Grid.Row="11" Grid.Column="3" Text="-" VerticalAlignment="Bottom" HorizontalAlignment="Center"/>

        <TextBlock Grid.Row="12" Grid.Column="3" Text="F:" VerticalAlignment="Bottom" />
        <TextBlock Name="resultF" Grid.Row="12" Grid.Column="3" Text="-" VerticalAlignment="Bottom" HorizontalAlignment="Center"/>

        <TextBlock Grid.Row="13" Grid.Column="3" Text="M:" VerticalAlignment="Bottom" />
        <TextBlock Name="resultM" Grid.Row="13" Grid.Column="3" Text="-" VerticalAlignment="Bottom" HorizontalAlignment="Center"/>
        
        <!--Buttony-->

        <Button Grid.Row="16" Grid.Column="1" Margin="10,20" MaxWidth="200" Content="spočítat" Click="Button_Spocitat"/>
        <Button Grid.Row="16" Grid.Column="3" Margin="10,20" MaxWidth="200" Content="vysvětlivky" Click="Button_Vysvetlivky"/>

    </Grid>
</Window>
